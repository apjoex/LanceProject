<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Base.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/blackColor</item>
    </style>


    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:buttonStyle">@style/ButtonColorDark</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
        <item name="android:windowBackground">@color/blackColor</item>
        <item name="android:background">@color/blackColor</item>
        <item name="android:colorBackground">@color/blackColor</item>
    </style>

    <style name="ButtonColorDark" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
